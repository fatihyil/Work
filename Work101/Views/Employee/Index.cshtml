@model List<EmployeeVM>
@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <h1>Çalışan Listesi</h1>
    <table class="table table-striped table-dark table-hover table-bordered">
        <caption>Çalışan Listesi</caption>
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">TC</th>
                <th scope="col">Adı</th>
                <th scope="col">Soyadı</th>
                <th scope="col">Adres</th>
                <th scope="col">Çalışan Numarası</th>
                <th scope="col">Telefon Numarası</th>
                <th scope="col">Doğum Tarihi</th>
                <th scope="col">İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.IdentityNumber</td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Address</td>
                    <td>@item.EmployeeNumber</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Birthday</td>
                    <td>                       
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id" class="ml-2"><i class="fas fa-trash-alt"></i></a>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id" class="ml-2"><i class="fas fa-edit"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container row justify-content-end">
        <a asp-controller="Employee" asp-action="Add" class="btn btn-success">Çalışan Ekle</a>
    </div>

</div>




