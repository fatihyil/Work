@model List<StudentVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <h1>Öğrenci Listesi</h1>

    <table class="table table-dark table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ad</th>
                <th scope="col">Soyadı</th>
                <th scope="col">Öğrenci No</th>
                <th scope="col">Doğum Tarihi</th>
                <th scope="col">Sınıfı</th>
                <th scope="col">İşlemler</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.FirtsName</td>
                    <td>@item.LastName</td>
                    <td>@item.StudentNo</td>
                    <td>@item.Birthday</td>
                    <td>@item.ClassNo</td>
                    <td>
                        <a asp-controller="Student" asp-action="Edit" class="ml-2"><i class="fas fa-edit"></i></a>
                        <a asp-controller="Student" asp-action="Delete" class="ml-2"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container row justify-content-end">
        <a asp-controller="Student" asp-action="Add" class="btn btn-success">Öğrenci Ekle</a>
    </div>
</div>






